<h1>新規投稿</h1>
<%= form_with(model: @movie, url: admin_movies_path) do |f| %>
  <h5>
    上映日<%= f.text_field :day %>
    製作国<%= f.text_field :country %>
    上映時間<%= f.text_field :time %>
  </h5>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>あらすじ</h4>
  <%= f.text_area :body %>

  <div class="check_box">
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
      <div class='form-check'>
        <%= tag.label do %>
          <%= tag.check_box %>
          <%= tag.text %>
        <% end %>
      </div>
    <% end %>
  </div>

  <%= f.submit '投稿' %>
<% end %>